<span class="float-right" id="big">
	 <%= is_approved?(@project) %>
		</span>
<span class="float-right" id="big">
	<% if current_user.id == @project.user_id %>
		<% if @project.locked %>
			<%= link_to lock_project_path, method: :post do %>
    		<span class="badge badge-pill badge-primary float-right" id="status-lock"><strong>Verrouillé</strong></span>
			<% end %>
		<% else %>
			<%= link_to lock_project_path, method: :post do %>
    		<span class="badge badge-pill badge-danger float-right" id="status-lock"><strong>Pas encore verrouillé</strong></span>
			<% end %>
		<% end %>
	<%else %>
		<% if @project.locked %>
    	<span class="badge badge-pill badge-primary float-right" id="status"><strong>Verrouillé</strong></span>
		<% else %>
   	 <span class="badge badge-pill badge-danger float-right" id="status"><strong>Pas encore verrouillé</strong></span>
		<% end %>
	<% end%>
</span>
		<div class="row">
		<h1>
			<strong class="text-center">
			<%= @project.title %>
			</strong>
		</h1>
		</div>
	</div>
<div class="card text-white bg-info mb-3 text-center">
<div class="card-block">
  <blockquote class="card-blockquote my-3">
    <p>
			<%= @project.short_description %>
    </p>
  </blockquote>
</div>
</div>

